<h1>Kittens</h1>

<ul>

    <% if @kittens.empty?%>
        <li> There are no kittens </li>
    <%else%>
        <% @kittens.each do |kitten|%>
            <li>
                <%= link_to kitten.name, kitten%> |
                <%= link_to "Delete", kitten_path(kitten), data: {
                        turbo_method: :delete,
                        turbo_confirm: "Are you sure ?"
            }%>
            </li>
        <%end%>
    <%end%>
</ul>
<%= link_to "Add new Kittens", new_kitten_path %>


